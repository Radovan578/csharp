<Window x:Class="Semafor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="F1 Štart" Width="700" Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid>

        
        <Ellipse x:Name="Light1A" Width="60" Height="60"
                 Fill="DimGray" Margin="130,82,510,342"/>
        <Ellipse x:Name="Light1B" Width="60" Height="60"
                 Fill="DimGray" Margin="130,162,510,262"/>

        
        <Ellipse x:Name="Light2A" Width="60" Height="60"
                 Fill="DimGray" Margin="230,82,410,342"/>
        <Ellipse x:Name="Light2B" Width="60" Height="60"
                 Fill="DimGray" Margin="230,162,410,262"/>

        
        <Ellipse x:Name="Light3A" Width="60" Height="60"
                 Fill="DimGray" Margin="320,82,320,342"/>
        <Ellipse x:Name="Light3B" Width="60" Height="60"
                 Fill="DimGray" Margin="320,162,320,262"/>

        
        <Ellipse x:Name="Light4A" Width="60" Height="60"
                 Fill="DimGray" Margin="418,82,222,342"/>
        <Ellipse x:Name="Light4B" Width="60" Height="60"
                 Fill="DimGray" Margin="418,162,222,262"/>

        
        <Ellipse x:Name="Light5A" Width="60" Height="60"
                 Fill="DimGray" Margin="520,82,120,342"/>
        <Ellipse x:Name="Light5B" Width="60" Height="60"
                 Fill="DimGray" Margin="520,162,120,262"/>


        
        <Label x:Name="InfoLabel"
               Content="Klikni Spusti"
               FontSize="20"
               HorizontalContentAlignment="Center"
               Margin="150,240,150,150"/>

        
        <Button x:Name="SpustiButton"
                Content="Spusti"
                Width="120" Height="50"
                Margin="150,330,430,80"
                Click="SpustiButton_Click"/>

        
        <Button x:Name="KlikniButton"
                Content="Klikni"
                Width="120" Height="50"
                Margin="430,330,150,80"
                Click="KlikniButton_Click"/>

    </Grid>
</Window>