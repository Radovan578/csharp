<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="NumberGuesser" Height="450" Width="800"
        Background="Beige">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="hc.jpg" TileMode="None" Stretch="Fill"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" FontSize="50" Foreground="Blue"  Margin="64,10,0,0" TextWrapping="Wrap" Text="Hot / Cold " VerticalAlignment="Top" RenderTransformOrigin="-1.44,-3.243"/>
        <Label Content="Uhadni tajne cislo 1-100" HorizontalAlignment="Left" Margin="64,82,0,0" VerticalAlignment="Top" FontSize="30" Foreground="Green"/>
        <TextBox Background ="BlanchedAlmond"  TextAlignment="Center" VerticalContentAlignment="Center" Name="Zadanie" HorizontalAlignment="Left" Margin="64,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="122" FontSize="20" FontFamily="Arial" Height="64" />
        <Button FontSize="30" Background="Cyan" Foreground="Blue" BorderBrush="YellowGreen" BorderThickness="4" Content="skus" HorizontalAlignment="Left" Margin="248,143,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,0.42" Click="Button_Click_skus" Height="64" Width="146"/>
        <TextBlock Name="Info" FontSize="24" HorizontalAlignment="Left" Margin="64,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="68" Width="348"/>
        <TextBlock Name="Pokusy" FontSize="24" HorizontalAlignment="Left" Margin="64,309,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" Height="44"/>
        <Button BorderBrush="Black" BorderThickness="5" Content="Reset" Background="OrangeRed" HorizontalAlignment="Left" Margin="303,362,0,0" VerticalAlignment="Top" FontSize="30" Width="168" Click="Button_Click_reset"/>

    </Grid>
</Window>
